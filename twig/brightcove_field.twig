{#=== OPTIONS ========================================================================================================#}

{% set option = {
class:        field.class|default(''),
label:        field.label|default(''),
buttonImport: field.buttonImport|default('Import Video'),
pattern:      field.pattern|default(''),
placeholder:  field.placeholder|default('Enter a term or id to search for brightcove videos'),
required:     field.required|default(false),
errortext:    field.error|default(''),
readonly:     field.readonly|default(false),
title:        field.title|default(''),
variant:      field.variant|default(''),
info:         field.info|default('')
} %}
{# variant[inline] #}

{#=== INIT ===========================================================================================================#}

{% set attr_text = {
    class:          option.class,
    name:           "lookup-"~name,
    id:             "lookup-"~key,
    pattern:        (option.pattern and option.pattern not in ['url', 'email']) ? option.pattern : '',
    maxlength:      30,
    placeholder:    option.placeholder,
    required:       option.required,
    data_errortext: option.errortext,
    readonly:       option.readonly,
    title:          option.title,
    type:           'text',
    value:          '',
} %}

{#=== FIELDSET =======================================================================================================#}

<fieldset class="brightcove brightcove-{{ key }} text">
    <div class="col-sm-12">
        <label class="control-label">{{ (option.info) ? macro.infopop(labelkey, option.info) : labelkey }}</label>
        <input{{ macro.attr(attr_text) }}>
        <img src="{{ paths.extensions }}vendor/cnd/brightcove/assets/ajax-loader.gif" class="spinner">
        <input name="{{ key }}" name="{{ key }}" id="{{ key }}" value="{{ context.content.get(contentkey) }}" type="hidden" value="">
    </div>
    <div class="col-sm-12 current-wrapper">
        <div class="current"></div>
        <button type="button" class="btn btn-secondary pull-right" onClick="brightcoveImport('{{ key }}', {{ field.import|json_encode }})">{{ option.buttonImport }}</button>
    </div>
</fieldset>
<script>
    $(function() {
        initBrightcoveField("{{ key }}", "{{ paths.root }}"); // we should have Bolt.conf("paths.root") but it seems we dont. At least during execution of our init.
    });
</script>